<div class="ViewChooser" i18n:domain="ftw.workspace">

    <span id="events-calendar">
        <b i18n:translate="documents_pill_documents">Preview</b>
    </span>|
    <a id="listdocuments" href="#" i18n:translate="documents_pill_list">
        List
    </a> 
</div>

<div class="previewContainer">
<div>
<tal:loop repeat="preview view/get_previews">

<div class="imageContainer">
  <a class="colorboxLink previewitem" rel="entry"
     tal:attributes="href string:${preview/overlay_url}">
                 <img tal:attributes="src preview/mimetype_image_url;
                                 title preview/mimetype_title;
                                 data-title preview/mimetype_title"
                 width="16"
                 class="file-mimetype" />

            <img tal:attributes="src preview/preview_image_url;
                                 alt preview/title"
                 width="200"
                 class="file-preview" />

  <b class="previewTitle" tal:content="preview/title" />
  <span tal:condition="preview/description" class="previewDesc" tal:content="preview/description" />
  </a>
</div>
</tal:loop>
</div>
</div>
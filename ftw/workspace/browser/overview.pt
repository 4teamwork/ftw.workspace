<tal:block i18n:domain="ftw.workspace">
    <div class="overview-left-column">

        <div class="box" tal:condition="view/folders">
            <h2 i18n:translate="">Folders</h2>
            <ul>
                <li tal:repeat="folder view/folders">
                    <span tal:replace="structure python: view.get_icon(folder)" />
                    <a class="rollover" tal:attributes="href folder/getURL;title python: view.get_description(folder)" tal:content="folder/Title" />
                </li>
            </ul>
        </div>
        <div class="box">
            <h2 i18n:translate="">Description</h2>
            <span tal:content="context/Description"></span>
            <span tal:content="structure context/getText | nothing"></span>
        </div>
    </div>
    <div class="overview-right-column">
        <div class="box" tal:condition="view/files">
            <h2 i18n:translate="">Documents</h2>
            <ul>
                <li tal:repeat="file view/files">
                    <span tal:replace="structure python: view.get_icon(file)" />
                    <a class="rollover" tal:attributes="href string:${file/getURL}/view;title python: view.get_description(file)" tal:content="file/Title" />
                </li>
            </ul>
        </div>

        <div class="box" tal:condition="view/recently_modified">
            <h2 i18n:translate="">recently modified</h2>
            <ul>
                <li tal:repeat="item view/recently_modified">
                    <span tal:content="python: item.modified.strftime('%d.%m.%Y %H:%M')"/>
                    <span tal:replace="structure python: view.get_icon(item)" />
                    <a class="rollover"
                       tal:attributes="href string:${item/getURL}/view; title python: view.get_description(item)" 
                       tal:content="item/Title" />
                </li>
            </ul>
        </div>
    </div>
</tal:block>

<html
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    tal:omit-tag="python: True"
    i18n:domain="ftw.workspace">

    <table>
        <colgroup>
            <col width="50%" />
            <col width="15%" />
            <col width="15%" />
            <col width="20%" />
        </colgroup>
        <thead>
            <tr>
                <th class="border-bottom">
                    <b i18n:translate="latex_files_title">Title</b>
                </th>
                <th class="border-bottom">
                    <b i18n:translate="latex_files_effective">Date</b>
                </th>
                <th class="border-bottom">
                    <b i18n:translate="latex_files_modified">Modified</b>
                </th>
                <th class="border-bottom">
                    <b i18n:translate="latex_files_creator">Creator</b>
                </th>
            </tr>
        </thead>

        <tbody>
            <tr tal:repeat="item view/get_items">
                <td tal:content="item/title"
                    class="border-bottom" />
                <td tal:content="item/effective"
                    class="border-bottom" />
                <td tal:content="item/modified"
                    class="border-bottom" />
                <td tal:content="item/creator"
                    class="border-bottom" />
            </tr>
        </tbody>
    </table>

</html>

<html
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    tal:omit-tag="python: True"
    i18n:domain="ftw.workspace">

    \makeatletter\@ifundefined{tablewidth}
    {\newlength\tablewidth}\makeatother
    \setlength\tablewidth\linewidth
    \addtolength\tablewidth{-8\tabcolsep}
    \renewcommand{\arraystretch}{1.4}
    \begin{longtable}{p{0.5\tablewidth}p{0.15\tablewidth}p{0.15\tablewidth}p{0.2\tablewidth}}

    \multicolumn{1}{p{0.5\tablewidth}}{\textbf{\textbf{<tal:omit tal:omit-tag="" i18n:translate="latex_files_title">Title</tal:omit>}}} &
    \multicolumn{1}{p{0.15\tablewidth}}{\textbf{\textbf{<tal:omit tal:omit-tag="" i18n:translate="latex_files_effective">Date</tal:omit>}}} &
    \multicolumn{1}{p{0.15\tablewidth}}{\textbf{\textbf{<tal:omit tal:omit-tag="" i18n:translate="latex_files_modified">Modified</tal:omit>}}} &
    \multicolumn{1}{p{0.2\tablewidth}}{\textbf{\textbf{<tal:omit tal:omit-tag="" i18n:translate="latex_files_creator">Creator</tal:omit>}}} \\
    \hline
    \endhead

    <tal:omit tal:omit-tag="" tal:repeat="item view/get_items">
        \multicolumn{1}{p{0.5\tablewidth}}{<tal:omit tal:replace="item/title"></tal:omit>} &
        \multicolumn{1}{p{0.15\tablewidth}}{<tal:omit tal:replace="item/effective"></tal:omit>} &
        \multicolumn{1}{p{0.15\tablewidth}}{<tal:omit tal:replace="item/modified"></tal:omit>} &
        \multicolumn{1}{p{0.2\tablewidth}}{<tal:omit tal:replace="item/creator"></tal:omit>} \\
        \hline
    </tal:omit>
    \end{longtable}

</html>
